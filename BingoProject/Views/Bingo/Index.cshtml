@model BingoModel
@{
    ViewData["Title"] = "Bingo";
}

<style>
    table.bingo {
        border-collapse: collapse;
        margin: 20px 0;
    }

        table.bingo td.cell {
            width: 100px;
            height: 100px;
            text-align: center;
            vertical-align: middle;
            border: 1px solid #333;
            cursor: pointer;
            font-size: 14px;
            padding: 5px;
            user-select: none;
        }

        table.bingo td.selected {
            background-color: #4CAF50;
            color: white;
        }

        table.bingo td.cell button {
            width: 100%;
            height: 100%;
            border: none;
            background: none;
            cursor: pointer;
            font-size: 14px;
        }
</style>

<h1>🎄 Новогоднее бинго</h1>

<form method="post" asp-action="Reset">
    @Html.AntiForgeryToken()
    <button type="submit" formaction="@Url.Action("Reset", "Bingo")">Reset</button>
</form>

<form method="post">
    <table class="bingo">
        @for (int i = 0; i < BingoModel.Size; i++)
        {
            <tr>
                @for (int j = 0; j < BingoModel.Size; j++)
                {
                    var isSelected = Model.Selected[i][j];
                    <td class="cell @(isSelected ? "selected" : "")">
                        <button type="submit" formaction="@Url.Action("ToggleCell", "Bingo", new { row = i, col = j })">
                            @Model.Items[i][j]
                        </button>
                    </td>
                }
            </tr>
        }
    </table>
</form>

